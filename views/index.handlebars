<div class="container">
	
	<div class="row">
	    <div class="center col-sm-12">
				<br>
				<br>
				<br>
			<img src="assets/img/burger.png" alt="Eat-Da-Burger App" id="icon">
	        <h1>Eat-Da-Burger!</h1>
	        <p></p>
	    </div>
  	</div>

	<div class="row">
	    <div class="col-sm-6" id="ordered">

			<br>
			
			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6" id="devour">

			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	
	<div class="row">
	    <div class="center col-sm-12">

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  	</form>
			  <button class="btn-primary" type="submit">Submit</button>


				<br>
				<br>

				
				<div class="footer">
			<p>Enter a burger you want to eat and click the Submit button.</p>
				</div>
	   
			</div>
	
  	</div>
	

</div>